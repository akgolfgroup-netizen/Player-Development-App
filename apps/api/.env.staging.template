# STAGING Environment Configuration
# Copy this file to .env.staging and update with actual values

# Server Configuration
NODE_ENV=staging
PORT=3000
API_VERSION=v1
HOST=0.0.0.0

# Database Configuration (Update with staging database credentials)
DATABASE_URL=postgresql://staging_user:staging_password@staging-db.example.com:5432/ak_golf_iup_staging?schema=public
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (Update with staging Redis instance)
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://staging-redis.example.com:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=staging-jwt-access-secret-key-min-32-characters-required
JWT_REFRESH_SECRET=staging-jwt-refresh-secret-key-min-32-characters-required
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# S3 / Object Storage Configuration
S3_ENDPOINT=https://s3.eu-north-1.amazonaws.com
S3_BUCKET=ak-golf-staging-media
S3_REGION=eu-north-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key
S3_FORCE_PATH_STYLE=false

# CORS Configuration (Update with staging frontend URL)
CORS_ORIGIN=https://staging.akgolf.com,http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# BullMQ / Queue Configuration
QUEUE_NAME=iup-golf-events
QUEUE_CONCURRENCY=5

# Default Tenant
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
DEFAULT_TENANT_NAME=AK Golf Academy
DEFAULT_TENANT_SLUG=ak-golf

# Security
BCRYPT_ROUNDS=10

# Email / SMTP Configuration
# For Gmail: Use app-specific password from https://myaccount.google.com/apppasswords
# For SendGrid: Use API key as SMTP_PASS with username "apikey"
# For AWS SES: Configure SMTP credentials from AWS console
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=staging@akgolf.com
SMTP_PASS=your-smtp-password-or-api-key
SMTP_FROM_EMAIL=noreply@akgolf.com
SMTP_FROM_NAME=AK Golf IUP - Staging

# Frontend URL (for email links)
FRONTEND_URL=https://staging.akgolf.com

# Optional: DataGolf API (if using)
# DATAGOLF_API_KEY=your_datagolf_api_key

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
