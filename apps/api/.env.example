# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ak_golf_iup?schema=public
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database Connection Retry (for Railway/Docker environments)
# These are used when the database may not be immediately available at startup
DB_CONNECT_RETRIES=10
DB_CONNECT_INITIAL_DELAY=1000
DB_CONNECT_MAX_DELAY=30000
DB_CONNECT_TIMEOUT=120

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-here-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# S3 / Object Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=iup-golf-media
S3_REGION=eu-north-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# BullMQ / Queue Configuration
QUEUE_NAME=iup-golf-events
QUEUE_CONCURRENCY=5

# Default Tenant (for initial setup)
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000
DEFAULT_TENANT_NAME=AK Golf Academy
DEFAULT_TENANT_SLUG=ak-golf

# Security
BCRYPT_ROUNDS=10

# Error Tracking (Sentry) - Optional
# SENTRY_DSN=https://<key>@<org>.ingest.sentry.io/<project>
# SENTRY_ENVIRONMENT=development
# SENTRY_RELEASE=git-commit-sha
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_PROFILES_SAMPLE_RATE=0.1
# SENTRY_DEBUG=false

# Email Configuration
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp

# SMTP Configuration (for development/staging)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_FROM=IUP Golf Academy <noreply@iup-golf.com>
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# SendGrid Configuration (for production - optional)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.your-api-key-here
# SENDGRID_FROM_EMAIL=noreply@iup-golf.com
# SENDGRID_FROM_NAME=IUP Golf Academy

# AWS SES Configuration (for production - optional)
# EMAIL_PROVIDER=ses
# AWS_SES_REGION=eu-north-1
# AWS_SES_ACCESS_KEY_ID=your-access-key
# AWS_SES_SECRET_ACCESS_KEY=your-secret-key
# AWS_SES_FROM_EMAIL=noreply@iup-golf.com

# Email Support
SUPPORT_EMAIL=support@iup-golf.com

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here

# Frontend URL (for email links and redirects)
FRONTEND_URL=http://localhost:3001
