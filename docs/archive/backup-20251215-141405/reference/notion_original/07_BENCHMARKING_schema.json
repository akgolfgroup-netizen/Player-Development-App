{
  "database_name": "BENCHMARKING",
  "description": "Benchmark testing sessions - conducted every 3rd week to track progression",
  "properties": {
    "Benchmark_ID": {
      "type": "title",
      "description": "Unique identifier (e.g., 'Player Name - Uke 3')"
    },
    "Spiller": {
      "type": "relation",
      "related_database": "SPILLERE",
      "description": "Link to player profile"
    },
    "Uke": {
      "type": "select",
      "options": ["3", "6", "9", "12", "15", "18", "21", "24", "27", "30", "33", "36", "39", "42"],
      "description": "Benchmark week number (every 3rd week)"
    },
    "Dato": {
      "type": "date",
      "description": "Benchmark session date"
    },
    "Periode": {
      "type": "select",
      "options": [
        "Evaluering",
        "Grunnperiode",
        "Spesialiseringsperiode",
        "Turneringsperiode"
      ],
      "description": "Training period when benchmark was conducted"
    },
    "Tester_gjennomført": {
      "type": "relation",
      "related_database": "TESTER",
      "description": "Link to individual test results"
    },
    "Antall_tester": {
      "type": "rollup",
      "relation_property": "Tester_gjennomført",
      "rollup_function": "count",
      "description": "Total number of tests performed"
    },
    "Antall_godkjent": {
      "type": "rollup",
      "relation_property": "Tester_gjennomført",
      "rollup_property": "Godkjent",
      "rollup_function": "count_values",
      "filter": true,
      "description": "Number of tests passed"
    },
    "Pass_rate": {
      "type": "formula",
      "formula": "(prop('Antall_godkjent') / prop('Antall_tester')) * 100",
      "format": "percent",
      "description": "Percentage of tests passed"
    },
    "Kategori_ved_benchmark": {
      "type": "select",
      "options": ["A", "B", "C", "D", "E", "F", "G", "H", "I", "J", "K"],
      "description": "Player category at time of benchmark"
    },
    "Oppsummering": {
      "type": "text",
      "description": "Summary of benchmark results - strengths and weaknesses"
    },
    "Nye_bruddpunkter": {
      "type": "multi_select",
      "options": [
        "Driver avstand",
        "Driver konsistens",
        "Jern nøyaktighet",
        "Wedge PEI",
        "Putting under press",
        "Putting lesing",
        "Bunker",
        "Shortgame generelt",
        "Fysisk styrke",
        "Mental styrke",
        "Strategisk forståelse",
        "Utholdenhet"
      ],
      "description": "New breaking points identified from this benchmark"
    },
    "Løste_bruddpunkter": {
      "type": "multi_select",
      "options": [
        "Driver avstand",
        "Driver konsistens",
        "Jern nøyaktighet",
        "Wedge PEI",
        "Putting under press",
        "Putting lesing",
        "Bunker",
        "Shortgame generelt",
        "Fysisk styrke",
        "Mental styrke",
        "Strategisk forståelse",
        "Utholdenhet"
      ],
      "description": "Breaking points resolved since last benchmark"
    },
    "Justeringer": {
      "type": "text",
      "description": "Training plan adjustments based on results"
    },
    "Fokusområder_neste_3_uker": {
      "type": "multi_select",
      "options": [
        "Teknikk - Full Swing",
        "Teknikk - Short Game",
        "Putting - Lag",
        "Putting - Lesing",
        "Fysisk - Styrke",
        "Fysisk - Eksplosivitet",
        "Fysisk - Mobilitet",
        "Mental - Press",
        "Mental - Rutiner",
        "Strategisk - Klubbvalg",
        "Strategisk - Bane"
      ],
      "description": "Priority focus areas for next 3 weeks"
    },
    "Kategori_progresjon_status": {
      "type": "select",
      "options": [
        "Klar for opprykk",
        "På riktig vei",
        "Plateau - trenger justering",
        "Bekymringsfull trend",
        "Stabil i kategori"
      ],
      "description": "Assessment of category progression readiness"
    },
    "Neste_benchmark": {
      "type": "date",
      "description": "Date of next scheduled benchmark (3 weeks)"
    },
    "Trener_signatur": {
      "type": "people",
      "description": "Coach who conducted the benchmark"
    },
    "Spiller_tilbakemelding": {
      "type": "text",
      "description": "Player's self-assessment and feedback"
    },
    "Rapport_generert": {
      "type": "checkbox",
      "description": "Benchmark report generated and shared"
    },
    "Rapport_link": {
      "type": "url",
      "description": "Link to generated PDF report"
    }
  },
  "views": [
    {
      "name": "Alle benchmarks",
      "type": "table",
      "sort": [{"property": "Dato", "direction": "descending"}]
    },
    {
      "name": "Per spiller",
      "type": "table",
      "group_by": "Spiller",
      "sort": [{"property": "Uke", "direction": "ascending"}]
    },
    {
      "name": "Kommende benchmarks",
      "type": "table",
      "filter": {"property": "Neste_benchmark", "date": {"next_month": {}}},
      "sort": [{"property": "Neste_benchmark", "direction": "ascending"}]
    },
    {
      "name": "Klar for opprykk",
      "type": "table",
      "filter": {
        "property": "Kategori_progresjon_status",
        "select": {"equals": "Klar for opprykk"}
      }
    },
    {
      "name": "Timeline",
      "type": "timeline",
      "timeline_by": "Dato"
    },
    {
      "name": "Per periode",
      "type": "board",
      "group_by": "Periode"
    }
  ],
  "benchmark_schedule": {
    "description": "Benchmarks occur every 3rd week",
    "weeks": [3, 6, 9, 12, 15, 18, 21, 24, 27, 30, 33, 36, 39, 42],
    "tests_per_benchmark": {
      "minimum": 4,
      "recommended": 7,
      "maximum": 14,
      "note": "Focus on breaking point areas and category requirements"
    }
  },
  "workflow": {
    "pre_benchmark": [
      "Schedule benchmark week in PERIODISERING",
      "Notify player 1 week in advance",
      "Prepare test equipment and recording devices",
      "Review player's current breaking points"
    ],
    "during_benchmark": [
      "Conduct 4-7 tests (minimum 2 from each category if possible)",
      "Record results in TESTER database",
      "Video record technique tests",
      "Note conditions and observations"
    ],
    "post_benchmark": [
      "Link all test results to BENCHMARKING entry",
      "Analyze pass rate and identify breaking points",
      "Write summary and adjustment recommendations",
      "Generate report for player and parent",
      "Update training plan if needed",
      "Schedule next benchmark (3 weeks)"
    ]
  }
}
