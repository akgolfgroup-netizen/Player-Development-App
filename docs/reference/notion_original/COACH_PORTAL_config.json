{
  "portal_name": "Coach Portal",
  "description": "Full access for coaches to manage all players, plans, and system administration",
  "access_level": "coach_admin",
  "permissions": {
    "view": ["all_databases", "all_players", "all_sessions", "all_tests", "analytics"],
    "edit": ["all_databases", "player_profiles", "training_plans", "test_results", "sessions"],
    "create": ["players", "sessions", "exercises", "week_templates", "tournaments", "tests"],
    "delete": ["sessions", "exercises", "notes"]
  },
  "dashboard_components": [
    {
      "component": "Overview_Stats",
      "metrics": [
        "total_active_players",
        "players_per_category",
        "sessions_this_week",
        "upcoming_benchmarks",
        "upcoming_tournaments"
      ]
    },
    {
      "component": "Player_Grid",
      "data_source": "SPILLERE",
      "fields": ["Navn", "Kategori", "Snittscore_12_måneder", "Status", "Bruddpunkter"],
      "filter": "Status = Aktiv",
      "sortable": true,
      "actions": ["view_profile", "edit_plan", "add_note", "schedule_session"]
    },
    {
      "component": "This_Week_Benchmarks",
      "data_source": "BENCHMARKING",
      "fields": ["Spiller", "Tester gjennomført", "Oppsummering"],
      "filter": "current_week"
    },
    {
      "component": "Upcoming_Tournaments",
      "data_source": "TURNERINGER",
      "fields": ["Turneringsnavn", "Dato", "Spillere", "Kategori", "Prioritet"],
      "filter": "next_4_weeks",
      "timeline_view": true
    },
    {
      "component": "Player_Progress_Alerts",
      "data_source": "PROGRESJON_LOGG",
      "alerts": [
        "missed_sessions_3_plus",
        "declining_quality_trend",
        "exceptional_progress",
        "ready_for_category_upgrade"
      ]
    },
    {
      "component": "Category_Distribution",
      "data_source": "SPILLERE",
      "visualization": "bar_chart",
      "metric": "count_per_category"
    }
  ],
  "features": [
    {
      "name": "Player Management",
      "description": "Create, edit, and manage player profiles",
      "database": "SPILLERE",
      "actions": [
        "add_new_player",
        "update_category",
        "set_breaking_points",
        "assign_training_plan",
        "view_full_history"
      ]
    },
    {
      "name": "Plan Builder",
      "description": "Create and customize 52-week periodization plans",
      "database": "PERIODISERING",
      "features": [
        "template_selection",
        "week_by_week_customization",
        "bulk_edit_periods",
        "copy_plan_to_player",
        "adjust_benchmark_weeks"
      ]
    },
    {
      "name": "Session Manager",
      "description": "Create, edit, and schedule training sessions",
      "database": "TRENINGSØKTER",
      "actions": [
        "create_session",
        "assign_to_week",
        "link_exercises",
        "set_L_S_CS_levels",
        "duplicate_session"
      ]
    },
    {
      "name": "Exercise Library Admin",
      "description": "Manage complete exercise database",
      "database": "ØVELSER",
      "actions": [
        "add_new_exercise",
        "upload_video",
        "categorize",
        "set_progression",
        "bulk_import"
      ]
    },
    {
      "name": "Test & Benchmark Manager",
      "description": "Record and analyze test results",
      "database": "TESTER",
      "features": [
        "record_test_results",
        "compare_to_requirements",
        "track_progression",
        "generate_benchmark_reports",
        "identify_breaking_points"
      ]
    },
    {
      "name": "Tournament Planner",
      "description": "Schedule and categorize tournaments",
      "database": "TURNERINGER",
      "actions": [
        "add_tournament",
        "assign_players",
        "set_priority",
        "create_tapering_plan",
        "record_results"
      ]
    },
    {
      "name": "Week Template Library",
      "description": "Create and manage 88 week templates",
      "database": "UKEPLANER_TEMPLATES",
      "actions": [
        "create_template",
        "assign_sessions_to_days",
        "set_category_and_period",
        "duplicate_and_modify",
        "apply_to_player_plan"
      ]
    },
    {
      "name": "Analytics Dashboard",
      "description": "System-wide analytics and insights",
      "data_sources": ["SPILLERE", "PROGRESJON_LOGG", "TESTER", "TRENINGSØKTER"],
      "metrics": [
        "avg_score_improvement_by_category",
        "session_completion_rate",
        "test_pass_rate",
        "category_progression_time",
        "breaking_point_resolution_time"
      ]
    },
    {
      "name": "Breaking Point Tracker",
      "description": "Identify and resolve player breaking points",
      "database": "BRUDDPUNKTER",
      "features": [
        "auto_detect_from_tests",
        "assign_corrective_exercises",
        "track_resolution_progress",
        "generate_focus_plans"
      ]
    }
  ],
  "batch_operations": [
    "bulk_session_assignment",
    "mass_category_update",
    "multi_player_plan_copy",
    "bulk_test_import"
  ],
  "reporting": [
    {
      "name": "Player Progress Report",
      "frequency": "monthly",
      "includes": ["score_trends", "test_results", "session_attendance", "breaking_points"]
    },
    {
      "name": "Benchmark Summary",
      "frequency": "every_3_weeks",
      "includes": ["all_test_results", "category_comparisons", "recommendations"]
    },
    {
      "name": "Annual Review",
      "frequency": "yearly",
      "includes": ["year_progression", "category_changes", "tournament_results", "next_year_plan"]
    }
  ],
  "integrations": {
    "calendar_sync": true,
    "email_notifications": true,
    "mobile_app": true,
    "export_formats": ["PDF", "Excel", "CSV"]
  }
}
