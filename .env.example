# =============================================================================
# IUP Golf Academy - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit real secrets to version control!
#
# Generate secure secrets with: openssl rand -hex 32
# =============================================================================

NODE_ENV=development

# =============================================================================
# Database (Required)
# =============================================================================
DATABASE_URL=postgresql://iup_golf:iup_golf_secret@localhost:5432/iup_golf
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# Redis (Required for production, optional for development)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# =============================================================================
# API Server
# =============================================================================
PORT=3000
HOST=0.0.0.0
API_VERSION=v1

# =============================================================================
# JWT Authentication (Required - generate with: openssl rand -hex 32)
# =============================================================================
# IMPORTANT: These must be at least 32 characters
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# Frontend
# =============================================================================
FRONTEND_URL=http://localhost:3001
REACT_APP_API_URL=http://localhost:3000/api/v1

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=debug
LOG_PRETTY=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# =============================================================================
# Multi-tenancy Defaults
# =============================================================================
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
DEFAULT_TENANT_NAME=AK Golf Academy
DEFAULT_TENANT_SLUG=ak-golf

# =============================================================================
# S3 Storage (Optional - for file uploads)
# =============================================================================
# S3_ENDPOINT=https://s3.eu-north-1.amazonaws.com
# S3_BUCKET=iup-golf-uploads
# S3_REGION=eu-north-1
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_FORCE_PATH_STYLE=false

# Storage expiry settings (in seconds)
STORAGE_UPLOAD_EXPIRY=3600
STORAGE_PLAYBACK_EXPIRY=3600
STORAGE_THUMBNAIL_EXPIRY=86400

# =============================================================================
# Email / SMTP (Optional)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM_EMAIL=noreply@example.com
# SMTP_FROM_NAME=IUP Golf

# =============================================================================
# Google Calendar Integration (Optional)
# =============================================================================
# GOOGLE_CALENDAR_CLIENT_ID=
# GOOGLE_CALENDAR_CLIENT_SECRET=
# GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/v1/calendar/google/callback

# =============================================================================
# OAuth Authentication - Google Sign-In (Optional)
# =============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=123456789-abc.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=GOCSPX-abc123...
# GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# =============================================================================
# OAuth Authentication - Apple Sign-In (Optional)
# =============================================================================
# Requires Apple Developer Account ($99/year)
# Get credentials from: https://developer.apple.com/account
# APPLE_CLIENT_ID=com.your-app.service-id
# APPLE_TEAM_ID=ABC123XYZ
# APPLE_KEY_ID=KEY123ABC
# APPLE_PRIVATE_KEY_PATH=./config/apple-key.p8
# APPLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/apple/callback

# =============================================================================
# Stripe Payment Processing (Optional)
# =============================================================================
# Get API keys from: https://dashboard.stripe.com/apikeys
# Test mode keys (pk_test_... and sk_test_...)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
#
# Subscription Plans (in cents/Ã¸re)
# STRIPE_PRICE_PLAYER_PREMIUM_MONTHLY=14900
# STRIPE_PRICE_PLAYER_PREMIUM_YEARLY=14900
# STRIPE_PRICE_PLAYER_ELITE_MONTHLY=29900
# STRIPE_PRICE_PLAYER_ELITE_YEARLY=29900
# STRIPE_PRICE_COACH_BASE_MONTHLY=19900
# STRIPE_PRICE_COACH_BASE_YEARLY=19900
# STRIPE_PRICE_COACH_PRO_MONTHLY=49900
# STRIPE_PRICE_COACH_PRO_YEARLY=49900
# STRIPE_PRICE_COACH_TEAM_MONTHLY=99900
# STRIPE_PRICE_COACH_TEAM_YEARLY=99900

# =============================================================================
# AI / Claude Integration (Optional)
# =============================================================================
# ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# DataGolf Integration (Optional)
# =============================================================================
# DATAGOLF_API_KEY=
DATAGOLF_BASE_URL=https://feeds.datagolf.com
DATAGOLF_RATE_LIMIT=1000
DATAGOLF_SYNC_ENABLED=false
DATAGOLF_SYNC_SCHEDULE=0 3 * * *

# =============================================================================
# Background Jobs
# =============================================================================
QUEUE_NAME=iup-golf-events
QUEUE_CONCURRENCY=5

# =============================================================================
# Retry Settings
# =============================================================================
RETRY_DELAY_MS=1000
RETRY_MAX_ATTEMPTS=3

# =============================================================================
# Session Reminders
# =============================================================================
SESSION_REMINDER_MINUTES=30

# =============================================================================
# Observability (Optional)
# =============================================================================
# Sentry error tracking
# SENTRY_DSN=

# PostHog analytics
# VITE_PUBLIC_POSTHOG_KEY=
# VITE_PUBLIC_POSTHOG_HOST=
