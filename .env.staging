# =============================================================================
# IUP Golf Academy - Staging Environment
# =============================================================================

NODE_ENV=staging

# Database
DATABASE_URL=postgresql://user:password@staging-db.example.com:5432/iup_golf_staging

# Redis
REDIS_URL=redis://staging-redis.example.com:6379

# API
API_PORT=3000
API_HOST=0.0.0.0
CORS_ORIGIN=https://staging.akgolf.no

# JWT (use different secret for staging)
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRES_IN=1h

# Frontend
REACT_APP_API_URL=https://api-staging.akgolf.no

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# Email / SMTP Configuration (Gmail for staging)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${STAGING_SMTP_USER}
SMTP_PASS=${STAGING_SMTP_PASSWORD}
SMTP_FROM_EMAIL=noreply-staging@akgolf.no
SMTP_FROM_NAME=AK Golf IUP (Staging)
FRONTEND_URL=https://staging.akgolf.no

# DataGolf Integration
DATAGOLF_API_KEY=${STAGING_DATAGOLF_API_KEY}
DATAGOLF_BASE_URL=https://feeds.datagolf.com
DATAGOLF_RATE_LIMIT=1000
DATAGOLF_SYNC_ENABLED=true
DATAGOLF_SYNC_SCHEDULE=0 3 * * *
