{
  "name": "coaching-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade coaching platform backend",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "turbo run typecheck",
    "design-system:check": "node scripts/design-system-gate/run-gate.js",
    "design-system:contrast": "node scripts/design-system-gate/contrast-checker.js --verbose",
    "lint:css": "stylelint \"apps/**/*.css\" --config scripts/design-system-gate/stylelint.config.js",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "packageManager": "pnpm@8.12.1"
}
