# =============================================================================
# IUP Golf Academy - Production Environment
# =============================================================================

NODE_ENV=production

# Database
DATABASE_URL=${PRODUCTION_DATABASE_URL}

# Redis
REDIS_URL=${PRODUCTION_REDIS_URL}

# API
API_PORT=3000
API_HOST=0.0.0.0
CORS_ORIGIN=https://app.akgolf.no

# JWT
JWT_SECRET=${PRODUCTION_JWT_SECRET}
JWT_EXPIRES_IN=1h

# Frontend
REACT_APP_API_URL=https://api.akgolf.no

# Logging (less verbose in production)
LOG_LEVEL=warn
LOG_PRETTY=false

# Email / SMTP Configuration (AWS SES recommended for production)
SMTP_HOST=email-smtp.eu-west-1.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${AWS_SES_SMTP_USER}
SMTP_PASS=${AWS_SES_SMTP_PASSWORD}
SMTP_FROM_EMAIL=noreply@akgolf.no
SMTP_FROM_NAME=AK Golf IUP
FRONTEND_URL=https://app.akgolf.no

# DataGolf Integration
DATAGOLF_API_KEY=${PRODUCTION_DATAGOLF_API_KEY}
DATAGOLF_BASE_URL=https://feeds.datagolf.com
DATAGOLF_RATE_LIMIT=1000
DATAGOLF_SYNC_ENABLED=true
DATAGOLF_SYNC_SCHEDULE=0 3 * * *
